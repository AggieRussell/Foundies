<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lost_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jose.foundies.LostDetails"
    android:background="#e4e5e7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:padding="15dp">

            <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/radioButton22"
                android:layout_marginTop="20dp"
                android:textColor="#737477"/>
                <!--app:buttonTint="#FFFFFF"-->

            <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton24"
                android:layout_below="@+id/radioButton21"
                android:layout_alignParentStart="true"
                android:textColor="#737477" />

            <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton25"
                android:layout_below="@+id/radioButton22"
                android:layout_alignStart="@+id/radioButton22"
                android:textColor="#737477" />

            <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton26"
                android:layout_below="@+id/radioButton23"
                android:layout_alignParentEnd="true"
                android:textColor="#737477" />

            <TextView
                android:text="Choose one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="#737477" />

            <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton23"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:textColor="#737477" />

            <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton21"
                android:textColor="#737477"
                android:layout_alignBaseline="@+id/radioButton22"
                android:layout_alignBottom="@+id/radioButton22"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="20dp">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textColor="#737477" />

            <CheckBox
                android:text="CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/checkBox8"
                android:layout_marginTop="20dp"
                android:textColor="#737477" />

            <CheckBox
                android:text="CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:id="@+id/checkBox9"
                android:layout_alignBaseline="@+id/checkBox8"
                android:layout_alignBottom="@+id/checkBox8"
                android:layout_toEndOf="@+id/checkBox8"
                android:textColor="#737477" />

            <CheckBox
                android:text="CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox10"
                android:layout_alignBaseline="@+id/checkBox9"
                android:layout_alignBottom="@+id/checkBox9"
                android:layout_toEndOf="@+id/checkBox9"
                android:textColor="#737477" />

            <CheckBox
                android:text="CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox11"
                android:layout_below="@+id/checkBox8"
                android:layout_alignParentStart="true"
                android:textColor="#737477" />

            <CheckBox
                android:text="CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox13"
                android:layout_below="@+id/checkBox9"
                android:layout_toEndOf="@+id/checkBox9"
                android:textColor="#737477" />

            <CheckBox
                android:text="CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox12"
                android:layout_below="@+id/checkBox9"
                android:layout_toStartOf="@+id/checkBox13"
                android:textColor="#737477" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Brief desciption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textColor="#737477"
                android:padding="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:ems="10"
                android:id="@+id/description_et"
                android:background="#FFFFFF"
                android:textColor="#737477"
                android:textColorHint="#dcdfe5"
                android:inputType="textAutoCorrect|textAutoComplete|textMultiLine"
                android:gravity="start" />

            <Button
                android:text="Next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/next_button"
                android:layout_margin="20dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
