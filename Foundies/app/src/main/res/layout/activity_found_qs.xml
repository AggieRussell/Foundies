<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_found_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jose.foundies.FoundItem"
    android:background="#e4e5e7">

    <LinearLayout
        android:id="@+id/linearLayoutFoundQs"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp">

        <TextView
            android:text="Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="#000080"
            android:layout_marginLeft="30dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/foundCategory"
            android:spinnerMode="dropdown"
            android:layout_margin="30dp"
            android:background="#999999"
            android:popupBackground="#999999" />

        <TextView
            android:text="Sub-Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="#000080"
            android:layout_marginLeft="30dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/foundSubcategories"
            android:spinnerMode="dropdown"
            android:layout_margin="30dp"
            android:background="#999999"
            android:popupBackground="#999999" />

        <TextView
            android:text="Quesition 3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="#000080"
            android:layout_marginLeft="30dp"
            android:visibility="gone"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/foundq3"
            android:layout_margin="30dp"
            android:popupBackground="#FFFFFF"
            android:background="#999999"
            android:visibility="gone"/>

        <Button
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/next_button"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="40dp" />
    </LinearLayout>
</RelativeLayout>
