<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jose.foundies.LostConfirmation"
    tools:showIn="@layout/activity_lost_confirmation"
    android:background="@drawable/small_back">

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matchResponses"
        android:indicatorLeft="?android:attr/expandableListPreferredChildIndicatorLeft"
        android:divider="#FFFFFF"
        android:dividerHeight="0.5dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Item: "
        android:textSize="20dp"
        android:id="@+id/selectedItem"
        android:layout_below="@+id/matchResponses"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_selector"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:text="Back" />

    <Button
        android:id="@+id/postButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_selector"
        android:layout_centerHorizontal="true"
        android:text="Post new item" />


    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:text="Contact" />

</RelativeLayout>
